<div role="tabpanel" class="tab-pane fade" id="Section2">
    <div class="pubboxw">
        <div class="manage-search">
            <div class="col-md-8">
                <form>
                    <div class="myselectType">
                        <ul id="main_box">
                            <li class="select_box"><span>全部</span>
                                <ul class="son_ul">
                                    <li>标题</li>
                                    <li>关键字</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <input placeholder="搜索从这里开始..." type="text" id="key">
                    <button type="button" onclick="setKey()"></button>
                </form>
            </div>
            <div class="col-md-4 mt20">
                <div class='checkbox'>
                    <input type='checkbox' id='checkbox1' name='checkboox[]'>
                    <label for='checkbox1'>精选</label>
                </div>

            </div>
        </div>
        <ul class="manage-list1" id="articleList">

        </ul>
        <ul class="pagination my-pagination" id="pageList">

        </ul>
    </div>
    <div class="pubbox">
        <div class="row">

            <div class="col-md-3">
                <form id="uploadForm">
                    <input type="hidden" value="" id="articleId">
                    <div class="form-group">
                        <div class="h4"><span class="glyphicon glyphicon-user"></span><%= locals.loginUser.nickname %>
                        </div>
                        <div class="fileinput fileinput-new">
                            <div class="fileinput-new thumbnail" id="preview">



                            </div>
                            <div> <span class="btn btn-primary btn-file my-file"> <span
                                            class="fileinput-new">选择文件</span>
                      <input type="file" onchange="preview(this)"/>
                      </span></div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-9 my-form">
                <form class="layui-form">
                    <div class="form-group">
                        <label for="exampleInputPassword1">标题</label>
                        <input class="form-control" placeholder="请输入标题" type="text"  id="title">
                        <p class="tit-Prompt">请输入标题</p>
                    </div>
                    <div class="mb20">
                        <div class="col-md-6">
                            <label for="exampleInputPassword1">类型</label>
                            <select class="form-control" id="category_id">
                                <% for(var i = 0; i < CategoryList.length; i++) { %>
                                <option value="<%= CategoryList[i]._id %>"><%= CategoryList[i].name %></option>
                                <% } %>
                            </select>
                            <p class="tit-Prompt">请选择类型</p>
                        </div>
                        <div class="col-md-6">
                            <label for="exampleInputPassword1">原作者</label>
                            <input class="form-control " placeholder="请输入原作者" type="text" id="author">
                            <p class="tit-Prompt">请输入原作者</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="jinghua layui-col-md12">
                            <span> 精华文章：</span><br>
                            <div class="layui-input-block" id="is_jing">

                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <div class="row my-content">
            <div class="form-group">
                <label><b>文章正文</b> 在这里填写详细的文章内容分享给大家</label>
                <textarea id="content-area" style="display: none;" class="form-control" rows="3"
                          name="content"></textarea>
                <div id="content-div" style="background-color: white"></div>
            </div>
        </div>
        <div class="my-button">
            <button type="button" class="btn btn-warning " onclick="UpdateArticle()"> 立即保存</button>
            <button type="button" class="btn btn-danger  " onclick="saveArticle()"> 重新发布</button>
        </div>
    </div>
</div>